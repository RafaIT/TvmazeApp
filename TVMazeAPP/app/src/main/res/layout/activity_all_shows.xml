<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootdrawer"
    tools:context=".activities.ActivityAllShows"
    >
    <TextView
        android:id="@+id/No_Conection_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="No Connection available!"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/retryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="Retry"
        android:clickable="true"
        android:background="@android:color/transparent"
        android:focusable="false"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold"
        />


    <!--Content-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/tvshowsgallery"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

    </android.support.v7.widget.RecyclerView>

    <!--MenuDrawer-->
    <android.support.design.widget.NavigationView
        android:id="@+id/menudrawer"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:itemTextColor="@color/fontColor"
        app:menu="@menu/drawer_menu"
        android:divider="@color/fontColor"
        android:layout_gravity="start">

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
